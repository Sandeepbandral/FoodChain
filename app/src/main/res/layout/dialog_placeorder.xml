<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/temp2"
                    android:text="Placing your order"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    app:rcProgress="0"
                    android:layout_below="@+id/temp2"
                    app:rcSecondaryProgress="100"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:rcMax="5000"
                    app:rcRadius="@dimen/_10sdp"
                    app:rcBackgroundPadding="0dp"
                    app:rcReverse="false"
                    app:rcProgressColor="@color/colorPrimary"
                    app:rcSecondaryProgressColor="@color/colorActivityBackground"
                    app:rcBackgroundColor="@color/colorActivityBackground" />

                <TextView
                    android:id="@+id/txt_cancel_order"
                    android:layout_below="@+id/progressbar"
                    android:text="Cancel"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorStatusRed"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RelativeLayout>

</LinearLayout>