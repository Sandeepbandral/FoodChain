<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:orientation="vertical">


    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Main View -->

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_below="@+id/actionbar"
        android:layout_above="@+id/btn_addtocart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Dish View -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/img_dish"
                    android:layout_width="@dimen/_75sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@color/colorWhite"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_dish"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_minus2sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_veg_nonveg"
                                android:layout_width="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_height="@dimen/_7sdp"
                                app:srcCompat="@drawable/ic_veg" />

                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:textAppearance="@style/MyCustomTextStyle.Bold"
                                android:textColor="@color/colorGreyHeading"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <!-- Calories View -->

                        <TextView
                            android:id="@+id/txt_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Calories: "
                            android:textAppearance="@style/MyCustomTextStyle.Regular"
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="@dimen/_10ssp" />

                        <!-- Allergies View -->

                        <TextView
                            android:id="@+id/txt_allergie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:includeFontPadding="false"
                            android:text="Allergens: "
                            android:textAppearance="@style/MyCustomTextStyle.Regular"
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/txt_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textAppearance="@style/MyCustomTextStyle.Bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!-- Description & Nutritions View -->

            <RelativeLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_description"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="INGREDIENTS &amp; NUTRITIONAL INFORMATION"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="@dimen/_11ssp" />

                    <ImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_3sdp"
                        android:rotation="0"
                        app:srcCompat="@drawable/ic_arrow_primary" />

                </RelativeLayout>

                <!-- Description and nutrition view -->

                <LinearLayout
                    android:id="@+id/llNutritional"
                    android:layout_below="@+id/rl_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <include
                        android:id="@+id/nutritional"
                        layout="@layout/layout_nutrition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

            <!-- Customization View -->

            <RelativeLayout
                android:id="@+id/rl_customization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_customisations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="CUSTOMIZATIONS"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />

                <RelativeLayout
                    android:layout_below="@+id/txt_customisations"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/colorGreyLight" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_customization_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_customization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_white_brdr_pri_round"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/img_minus"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_7sdp"
                        app:srcCompat="@drawable/ic_minus" />

                    <RelativeLayout
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text="1"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14ssp" />

                    <RelativeLayout
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_7sdp"
                        app:srcCompat="@drawable/ic_plus" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!-- Add to Cart -->

    <RelativeLayout
        android:id="@+id/btn_addtocart"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/bg_primary_round_complete">

        <TextView
            android:id="@+id/add_to_cart_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Add to Cart"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/total_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />


    </RelativeLayout>

    <!-- No Internet View -->

    <include
        android:id="@+id/view_nointernet"
        android:visibility="gone"
        android:layout_below="@id/actionbar"
        layout="@layout/sublayout_nointernet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>