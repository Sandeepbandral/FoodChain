<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/bg_white_round"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_heading"
            android:text="New Version Available!"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_message"
            android:text="There is a new version available for download! Please update app by visiting Google Play Store."
            android:layout_below="@+id/txt_heading"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="@color/colorGrey"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/txt_message"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_update"
                android:text="Update"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/_12ssp"
                android:layout_marginRight="@dimen/_5sdp"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:background="@drawable/bg_primary_round_complete"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>