<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_actionbar_parent"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:id="@+id/img_actionbar_backarrow"
            app:srcCompat="@drawable/ic_arrow"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:paddingLeft="@dimen/_7sdp"
            android:rotation="90"
            android:paddingRight="@dimen/_7sdp"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_45sdp" />

        <TextView
            android:id="@+id/txt_actionbar_title"
            android:text=""
            android:textSize="@dimen/_14ssp"
            android:textAllCaps="true"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginRight="@dimen/_35sdp"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/MyCustomTextStyle.Regular"
            android:layout_toRightOf="@+id/img_actionbar_backarrow"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_actionbar_search"
            android:layout_marginTop="@dimen/_7sdp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_actionbar_backarrow"
            android:background="@drawable/bg_primarydark_round_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_actionbar_search"
                android:hint="@string/type_your_search_here"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:singleLine="true"
                android:text=""
                android:layout_marginLeft="@dimen/_minus5sdp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/rl_temp"
                android:layout_toLeftOf="@+id/img_actionbar_cross"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_11ssp"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_actionbar_cross"
                app:srcCompat="@drawable/ic_cross_white"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp" />

            <RelativeLayout
                android:id="@+id/rl_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_actionbar_search"
                    app:srcCompat="@drawable/ic_search"
                    android:padding="@dimen/_9sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/progress_search"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    app:indicatorName="BallSpinFadeLoaderIndicator"
                    app:indicatorColor="@color/colorWhite"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_actionbar_search2"
                app:srcCompat="@drawable/ic_search"
                android:scaleType="fitEnd"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_45sdp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_actionbar_filter"
                app:srcCompat="@drawable/ic_filter"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>