<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:clickable="true"
    android:orientation="vertical">

    <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
        android:id="@+id/swipyrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srl_direction="top">

            <!-- Main View -->

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:visibility="visible"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:visibility="gone">

                        <!-- Dishes View -->

                        <com.android42works.magicapp.utils.CustomViewPager
                            android:id="@+id/mViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite" />

                        <!-- Offers View -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.3"
                            android:background="@color/colorBlack" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null">

                            <TextView
                                android:id="@+id/txt_offer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/txt_offer_details"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:text=""
                                android:textAppearance="@style/MyCustomTextStyle.Bold"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/txt_offer_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:text=""
                                android:textAppearance="@style/MyCustomTextStyle.Light"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_10ssp" />

                            <!-- Slider Indicator view -->

                            <LinearLayout
                                android:id="@+id/ll_indicator_slider"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible" />


                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/rl_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rl_reset"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_reset_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Remove Filter"
                                android:paddingTop="@dimen/_2sdp"
                                android:textAppearance="@style/MyCustomTextStyle.Light"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10ssp" />

                            <View
                                android:layout_alignRight="@+id/txt_reset_filter"
                                android:layout_alignLeft="@+id/txt_reset_filter"
                                android:background="@color/colorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:layout_below="@+id/txt_reset_filter"
                                android:layout_height="@dimen/_1sdp"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_categories"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_below="@+id/rl_reset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!-- No Dish View -->

                        <RelativeLayout
                            android:id="@+id/rl_no_dish"
                            android:layout_below="@+id/rl_reset"
                            android:layout_width="match_parent"
                            android:background="@color/colorActivityBackground"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_no_dish"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_no_dish" />

                                <TextView
                                    android:id="@+id/txt_no_dish"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/img_no_dish"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center_horizontal"
                                    android:text=""
                                    android:textAppearance="@style/MyCustomTextStyle.Regular"
                                    android:textColor="@color/colorGreyHeading"
                                    android:textSize="@dimen/_11ssp" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <!-- Not Active View -->

                        <RelativeLayout
                            android:id="@+id/rl_not_active"
                            android:layout_below="@+id/rl_reset"
                            android:layout_width="match_parent"
                            android:background="@color/colorActivityBackground"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/img_not_active"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_no_dish" />

                                <TextView
                                    android:id="@+id/txt_not_active"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/img_not_active"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:gravity="center_horizontal"
                                    android:text=""
                                    android:textAppearance="@style/MyCustomTextStyle.Regular"
                                    android:textColor="@color/colorGreyHeading"
                                    android:textSize="@dimen/_11ssp" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>

    </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

</RelativeLayout>