<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <!-- Status View -->

    <TextView
        android:id="@+id/txt_hall_status"
        android:textSize="@dimen/_10ssp"
        android:text="Hall is closed."
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:textColor="@color/colorStatusRed"
        android:textAppearance="@style/MyCustomTextStyle.Light"
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_reset"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_reset_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Remove Filter"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp" />

        <View
            android:layout_alignRight="@+id/txt_reset_filter"
            android:layout_alignLeft="@+id/txt_reset_filter"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_below="@+id/txt_reset_filter"
            android:layout_height="@dimen/_1sdp"/>

    </RelativeLayout>

    <!-- Main View -->

    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_above="@+id/view_cart"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/mTabLayout"
            style="@style/customTabLayout"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/colorWhite"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/mViewPager"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_below="@+id/mTabLayout"
            android:layout_above="@+id/view_cart"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            android:id="@+id/view_cart"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            layout="@layout/sublayout_cart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

    </RelativeLayout>

    <!-- No Dish View -->

    <RelativeLayout
        android:id="@+id/rl_no_dish"
        android:layout_below="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_no_dish"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_no_dish" />

            <TextView
                android:id="@+id/txt_no_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_no_dish"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:text="No dishes found."
                android:textAppearance="@style/MyCustomTextStyle.Regular"
                android:textColor="@color/colorGreyHeading"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>