<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <!-- Main View -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorActivityBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/ic_order_success"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:text="Thank You!"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textSize="@dimen/_18ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_orderid"
                    android:text="Your order #___ has been placed. Please check the progress below."
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_deliveryTime"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Estimated Pickup Time : "
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_deliveryTime"
                        android:text="00:00 AM - 00:00 PM"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_35sdp"/>

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_circle_white"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_height="@dimen/_30sdp">

                        <RelativeLayout
                            android:id="@+id/rl_tick_waiting"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_circle_grey"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <ImageView
                            android:id="@+id/img_tick_waiting"
                            android:padding="@dimen/_7sdp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_tick_white"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp">

                    <TextView
                        android:text="Waiting for Confirmation"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Your order has been submitted at Magic."
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_circle_white"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_height="@dimen/_30sdp">

                        <RelativeLayout
                            android:id="@+id/rl_tick_confirmed"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_circle_grey"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <ImageView
                            android:id="@+id/img_tick_confirmed"
                            android:padding="@dimen/_7sdp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_tick_white"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp">

                    <TextView
                        android:text="Order Confirmed"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Your order is in preparation."
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_circle_white"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_height="@dimen/_30sdp">

                        <RelativeLayout
                            android:id="@+id/rl_tick_preparing"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_circle_grey"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <ImageView
                            android:id="@+id/img_tick_preparing"
                            android:padding="@dimen/_7sdp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_tick_white"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp">

                    <TextView
                        android:text="Order Preparing"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Your order is in kitchen for preparation."
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_circle_white"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_height="@dimen/_30sdp">

                        <RelativeLayout
                            android:id="@+id/rl_tick_prepared"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_circle_grey"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <ImageView
                            android:id="@+id/img_tick_prepared"
                            android:padding="@dimen/_7sdp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_tick_white"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp">

                    <TextView
                        android:text="Order Prepared"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Your order is ready to be delivered."
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorWhite"
                        android:layout_alignParentTop="true"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_35sdp"/>

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_circle_white"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_height="@dimen/_30sdp">

                        <RelativeLayout
                            android:id="@+id/rl_tick_delivered"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_circle_grey"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"/>

                        <ImageView
                            android:id="@+id/img_tick_delivered"
                            android:padding="@dimen/_7sdp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_tick_white"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp">

                    <TextView
                        android:text="Order Delivered"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Order Delivered."
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textSize="@dimen/_9ssp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>