<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.android42works.magicapp.roundedview.RoundKornerRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@color/colorWhite"
        app:corner_radius="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_hall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rLayoutAplha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:background="@color/colorGreyDishTitle" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14ssp" />

        <RelativeLayout
            android:id="@+id/rLayoutHallClosed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignBottom="@+id/img_hall"
            android:background="@color/colorOrange"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtHallClosed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Hall is closed"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone" />

        </RelativeLayout>


    </com.android42works.magicapp.roundedview.RoundKornerRelativeLayout>

</LinearLayout>