<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingLeft="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/rl_name"
            android:layout_toLeftOf="@+id/rl_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_dish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_veg_nonveg"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_centerVertical="false"
                    app:srcCompat="@drawable/ic_veg" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_veg_nonveg"
                    android:gravity="top|left"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorGreyHeading"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_veg_nonveg1"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_veg" />

                <TextView
                    android:id="@+id/txt_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_veg_nonveg"
                    android:text="$1000"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/ll_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_minus"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:padding="@dimen/_6sdp"
                        android:background="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_minus_white" />

                    <TextView
                        android:id="@+id/txt_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:minWidth="@dimen/_24sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="1"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="@dimen/_18sdp"
                        android:background="@color/colorPrimary"
                        android:layout_height="@dimen/_18sdp"
                        android:padding="@dimen/_6sdp"
                        app:srcCompat="@drawable/ic_plus_white" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="right|top"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/txt_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginLeft="@dimen/_17sdp"
            android:text="CURRENTLY UNAVAILABLE"
            android:paddingRight="@dimen/_2sdp"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:textColor="@color/colorStatusRed"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="top"
            android:text="Remove"
            android:paddingRight="@dimen/_2sdp"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:textColor="@color/colorStatusRed"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/colorGreyLight" />

</LinearLayout>