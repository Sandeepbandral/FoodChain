<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/bg_white_round"
        android:layout_width="@dimen/_270sdp"
        android:padding="@dimen/_25sdp"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content">

        <!-- Step 1 View -->

        <LinearLayout
            android:id="@+id/ll_step1"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Please rate your order"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorGreyHeading"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_orderno"
                android:text="Order No #"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_items"
                android:text="Items"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGreyHeading"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Your feedback will help us to improve our service experience."
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGreyHeading"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_rateup"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/bg_circle_white_border_grey"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">

                    <ImageView
                        android:id="@+id/img_rateup"
                        android:padding="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_rateup_grey"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ratedown"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/bg_circle_white_border_grey"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">

                    <ImageView
                        android:id="@+id/img_ratedown"
                        android:padding="@dimen/_15sdp"
                        app:srcCompat="@drawable/ic_ratedown_grey"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:text="Next"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/_12ssp"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:background="@drawable/bg_primary_round_complete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>

        <!-- Step 2 View -->

        <LinearLayout
            android:id="@+id/ll_step2"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Please rate your order"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorGreyHeading"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Your feedback will help us to improve our service experience."
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGreyHeading"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_quality"
                    android:text="Quality"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_white_border_grey_heading"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_time"
                    android:text="Time"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bg_white_border_grey_heading"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_taste"
                    android:text="Taste"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_white_border_grey_heading"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_packaging"
                    android:text="Packaging"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/bg_white_border_grey_heading"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_others"
                    android:text="Others"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bg_white_border_grey_heading"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_addnote"
                android:hint="Add a note"
                android:textColorHint="@color/colorGreyHint"
                android:textColor="@color/colorGreyHeading"
                android:maxLines="3"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:background="@drawable/bg_darkgrey_underline"
                android:textSize="@dimen/_11ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_submit"
                android:text="Submit"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/_20sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_12ssp"
                android:textAppearance="@style/MyCustomTextStyle.Bold"
                android:background="@drawable/bg_primary_round_complete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>