<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <!-- Main View -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="CONTACT US"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Name View -->

                <EditText
                    android:id="@+id/edt_name"
                    android:hint="Name*"
                    android:textColorHint="@color/colorGreyHint"
                    android:textColor="@color/colorGrey"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_darkgrey_underline"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Email View -->

                <TextView
                    android:id="@+id/txt_email"
                    android:hint="Email Address*"
                    android:textColorHint="@color/colorGreyHint"
                    android:textColor="@color/colorGreyHint"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_darkgrey_underline"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Hall View -->

                <RelativeLayout
                    android:background="@drawable/bg_darkgrey_underline"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_hall"
                        android:background="@null"
                        android:overlapAnchor="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/img_spinner_arrow"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingRight="@dimen/_4sdp"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/ic_arrow_grey"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp" />

                </RelativeLayout>

                <!-- Subject View -->

                <EditText
                    android:id="@+id/edt_subject"
                    android:hint="Subject*"
                    android:textColorHint="@color/colorGreyHint"
                    android:textColor="@color/colorGrey"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_darkgrey_underline"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Message View -->

                <EditText
                    android:id="@+id/edt_message"
                    android:hint="Message*"
                    android:textColorHint="@color/colorGreyHint"
                    android:textColor="@color/colorGrey"
                    android:maxLines="5"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_darkgrey_underline"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Submit Button View -->

                <Button
                    android:id="@+id/btn_submit"
                    android:text="Submit"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_below="@+id/txt_forgotpass"
                    android:background="@drawable/bg_primary_round_complete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>