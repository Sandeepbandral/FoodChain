<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_tick"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_tick_primary"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp" />

        <ImageView
            android:id="@+id/img_card"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_tick"
            app:srcCompat="@drawable/ic_card_default"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp" />

        <TextView
            android:id="@+id/txt_cardno"
            android:layout_toRightOf="@+id/img_card"
            android:text="xxxx-xxxx-xxxx-xxxx"
            android:textSize="@dimen/_11ssp"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorGreyHeading"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_default"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_setdefault"
                android:text=""
                android:visibility="visible"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/colorGreyHeading"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_19sdp" />

            <RelativeLayout
                android:background="@color/colorGreyHeading"
                android:layout_alignLeft="@+id/txt_setdefault"
                android:layout_alignRight="@+id/txt_setdefault"
                android:layout_below="@+id/txt_setdefault"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"/>

            <Button
                android:id="@+id/btn_default"
                android:text="Default"
                android:visibility="visible"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                android:textAppearance="@style/MyCustomTextStyle.Regular"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_20sdp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_close"
            android:scaleType="fitEnd"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_cross_grey"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_divider"
        android:background="@color/colorGreyHint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</LinearLayout>