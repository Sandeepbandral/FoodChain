<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@null"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:background="@color/colorWhite"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dish"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_77sdp" />

        <LinearLayout
            android:layout_toLeftOf="@+id/img_dish"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/_minus2sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_veg_nonveg"
                        app:srcCompat="@drawable/ic_veg"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_7sdp" />

                    <TextView
                        android:text=""
                        android:id="@+id/txt_name"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textSize="@dimen/_12ssp"
                        android:textAppearance="@style/MyCustomTextStyle.Regular"
                        android:textColor="@color/colorGreyHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp" />

                </LinearLayout>

                <!-- Calories View -->

                <LinearLayout
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Calories: "
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textSize="@dimen/_10ssp"
                        android:textAppearance="@style/MyCustomTextStyle.Regular"
                        android:textColor="@color/colorGreyHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_calorie"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textSize="@dimen/_10ssp"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textColor="@color/colorGreyHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Allergies View -->

                <TextView
                    android:id="@+id/txt_allergie"
                    android:text="Allergens: "
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10ssp"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textColor="@color/colorGreyHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_cost"
                        android:text="$"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12ssp"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/img_favourite"
                        android:padding="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/txt_cost"
                        app:srcCompat="@drawable/ic_heart_empty"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_divider"
        android:background="@color/colorActivityBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"/>


</LinearLayout>