<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <!-- Main View -->

    <ScrollView
        android:layout_below="@+id/actionbar"
        android:layout_above="@+id/btn_addnew"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Online Payments"
                    android:textSize="@dimen/_12ssp"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="1"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="After your first payment we will save your details for future use."
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorGreyHint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_addnew"
        android:text="Add New Card"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/MyCustomTextStyle.Bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_5sdp"
        android:layout_below="@+id/txt_forgotpass"
        android:background="@drawable/bg_primary_round_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp" />

</RelativeLayout>