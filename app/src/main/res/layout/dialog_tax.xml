<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                        <TextView
                            android:text="Taxes"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/colorGreyHeading"
                            android:textAppearance="@style/MyCustomTextStyle.Bold"
                            android:layout_toRightOf="@+id/img_percent"
                            android:layout_toLeftOf="@+id/img_dropdown"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_taxes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@color/colorGreyHint"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"/>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:text="Total"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/colorGreyHeading"
                                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_total"
                                    android:text=""
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_alignParentRight="true"
                                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                        </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_exit"
                    app:srcCompat="@drawable/ic_cross_grey"
                    android:padding="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />


        </RelativeLayout>

</LinearLayout>