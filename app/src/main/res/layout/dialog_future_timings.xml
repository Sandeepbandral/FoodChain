<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Main View -->

    <LinearLayout
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_350sdp"
        android:orientation="vertical">

        <!-- Title View -->

        <RelativeLayout
            android:background="@drawable/bg_primary_round_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

                <TextView
                    android:id="@+id/txt_hall_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Hall Name"
                    android:textAppearance="@style/MyCustomTextStyle.Regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="(Future Availability)"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_9ssp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_exit"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_cross_white" />

        </RelativeLayout>

        <!-- List View -->

        <RelativeLayout
            android:background="@drawable/bg_white_round_below"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>