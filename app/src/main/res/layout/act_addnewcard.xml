<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <!-- Main View -->

    <ScrollView
        android:layout_below="@+id/actionbar"
        android:layout_above="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_marginLeft="@dimen/_minus5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rdbtn_student"
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Regular"
                        android:textSize="@dimen/_12ssp"
                        android:text="Student Card"
                        app:buttonTint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rdbtn_credit"
                        android:textColor="@color/colorGreyHeading"
                        android:textAppearance="@style/MyCustomTextStyle.Regular"
                        android:textSize="@dimen/_12ssp"
                        android:checked="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:buttonTint="@color/colorPrimary"
                        android:text="Credit &amp; Debit Cards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RadioGroup>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/colorGreyHint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>


                <TextView
                    android:text="Add a Card"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Name View -->

                <EditText
                    android:id="@+id/edt_name"
                    android:hint="Name on card*"
                    android:textColorHint="@color/colorGreyHint"
                    android:textColor="@color/colorGrey"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_darkgrey_underline"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Card Number View -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_cardno"
                        android:hint="Card number*"
                        android:textColorHint="@color/colorGreyHint"
                        android:textColor="@color/colorGrey"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:maxLength="19"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/bg_darkgrey_underline"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/img_card"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_card_default"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_cardexpiry"
                        android:hint="Expiry date (MM/YY)*"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorGreyHint"
                        android:textColor="@color/colorGrey"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:background="@drawable/bg_darkgrey_underline"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:inputType="number"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_cardcvv"
                        android:hint="CVV*"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorGreyHint"
                        android:textColor="@color/colorGrey"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:background="@drawable/bg_darkgrey_underline"
                        android:paddingTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textSize="@dimen/_12ssp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:text="Add Card"
        android:textAppearance="@style/MyCustomTextStyle.Bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/txt_forgotpass"
        android:background="@drawable/bg_primary_round_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp" />

</RelativeLayout>