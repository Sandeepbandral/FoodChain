<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_tick"
                app:srcCompat="@drawable/ic_tick_orangecircle"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/img_rate"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_rateup_primary"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp" />

            <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/img_tick"
                android:layout_toLeftOf="@+id/img_rate"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_order"
                    android:text="Order :"
                    android:textSize="@dimen/_10ssp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/colorGreyHeading"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_hall"
                    android:text="Hall 1"
                    android:textSize="@dimen/_10ssp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/colorGreyDishDeliveryTime"
                    android:textAppearance="@style/MyCustomTextStyle.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/colorGreyLight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_space"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>

            <LinearLayout
                android:id="@+id/ll_items"
                android:layout_toRightOf="@+id/rl_space"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Key lime pie"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorGreyHeading"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Price: $0"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10ssp" />

                    <RelativeLayout
                        android:background="@color/colorGreyDishDeliveryTime"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/txt_pickup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Pickup Time: "
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Jan 1, 2018, 00:00AM"
                        android:textAppearance="@style/MyCustomTextStyle.Light"
                        android:textColor="@color/colorGreyDishDeliveryTime"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Order status: "
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textAppearance="@style/MyCustomTextStyle.Regular"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_toRightOf="@+id/rl_space"
                android:layout_below="@+id/ll_items"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_reorder"
                    android:text="Reorder"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_primary_round_complete"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_30sdp" />

                <Button
                    android:id="@+id/btn_rate"
                    android:layout_toRightOf="@+id/btn_reorder"
                    android:text="Rate this order"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_primary_round_complete"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_30sdp" />

            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>