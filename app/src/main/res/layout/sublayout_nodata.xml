<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- No Data View -->

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_nodata"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

        <TextView
            android:id="@+id/txt_nodata_title"
            android:text="No Data"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorGreyHeading"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_nodata_desc"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorGreyHeading"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>