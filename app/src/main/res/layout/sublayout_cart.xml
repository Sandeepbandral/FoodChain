<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_parent_cart"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="VIEW CART"
            android:gravity="center"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txt_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/_7sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="$ 0.00"
            android:gravity="center"
            android:textAppearance="@style/MyCustomTextStyle.Bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txt_cart_count"
            android:background="@drawable/bg_primary_white_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="1"
            android:gravity="center"
            android:textAppearance="@style/MyCustomTextStyle.Regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

</LinearLayout>