<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:orientation="vertical">

    <!-- No Data View -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_25sdp">

        <ImageView
            android:id="@+id/img_nodata"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/no_fav" />

        <TextView
            android:id="@+id/txt_nodata_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="FOOD IS LOVE MADE VISIBLE."
            android:textAppearance="@style/MyCustomTextStyle.Regular"
            android:textColor="@color/colorGreyHeading"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/txt_nodata_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Once you favorite a dish, it will appear here."
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:textColor="@color/colorGreyHeading"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

</LinearLayout>