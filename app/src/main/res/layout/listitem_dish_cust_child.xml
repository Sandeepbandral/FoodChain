<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rdbtn_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_toLeftOf="@+id/addon_price_txt"
            android:background="@color/colorWhite"
            android:singleLine="false"
            android:text="Option Name"
            android:textAppearance="@style/MyCustomTextStyle.Regular"
            android:textColor="@color/colorGreyHeading"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible"
            app:buttonTint="@color/colorPrimary" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/chkbxk_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_toLeftOf="@+id/addon_price_txt"
            android:background="@color/colorWhite"
            android:singleLine="false"
            android:text="Option Name"
            android:textAppearance="@style/MyCustomTextStyle.Regular"
            android:textColor="@color/colorGreyHeading"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible"
            app:buttonTint="@color/colorPrimary" />

        <TextView
            android:id="@+id/addon_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/MyCustomTextStyle.Regular" />


    </RelativeLayout>


</LinearLayout>