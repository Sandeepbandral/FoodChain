<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_backarrow"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_below="@+id/actionbar"
        android:layout_above="@+id/view_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_filter"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_hall"
                android:text="Selected Hall : "
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/_10sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textAppearance="@style/MyCustomTextStyle.Regular"
                android:textColor="@color/colorGreyHeading"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/txt_clear_filter"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/txt_clear_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Remove Filter"
                android:paddingTop="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textAppearance="@style/MyCustomTextStyle.Light"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp" />

            <View
                android:layout_alignRight="@+id/txt_clear_filter"
                android:layout_alignLeft="@+id/txt_clear_filter"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_below="@+id/txt_clear_filter"
                android:layout_height="@dimen/_1sdp"/>

        </RelativeLayout>

        <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
            android:id="@+id/swipyrefreshlayout"
            android:layout_below="@+id/rl_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srl_direction="both">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_dishes"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

        <!-- No Data View -->

        <include
            android:id="@+id/view_nodata"
            android:visibility="gone"
            layout="@layout/sublayout_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <!-- Bottom Cart View -->

    <include
        android:id="@+id/view_cart"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        layout="@layout/sublayout_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"/>

    <!-- No Internet View -->

    <include
        android:id="@+id/view_nointernet"
        android:visibility="gone"
        android:layout_below="@+id/actionbar"
        layout="@layout/sublayout_nointernet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>