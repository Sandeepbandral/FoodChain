<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground">

    <!-- ActionBar View -->

    <include
        android:id="@+id/actionbar"
        layout="@layout/sublayout_actionbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Fragment Container View -->

    <FrameLayout
        android:layout_above="@+id/rl_bottomview"
        android:layout_below="@+id/actionbar"
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1sdp"
        android:focusable="false" />

    <!-- Bottom View -->

    <RelativeLayout
        android:id="@+id/rl_bottomview"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bottom Cart View -->

        <include
            android:id="@+id/view_cart"
            android:visibility="gone"
            layout="@layout/sublayout_cart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <RelativeLayout
            android:id="@+id/rl_divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/view_cart"
            android:background="@color/colorGreyBottomNavigation" />

        <!-- Bottom Options View -->

        <LinearLayout
            android:id="@+id/ll_bottom_navigation"
            android:layout_below="@+id/rl_divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:weightSum="4">

            <!-- Home Bottom View -->

            <LinearLayout
                android:id="@+id/ll_bottom_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bottom_home"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_home_grey" />

                <TextView
                    android:id="@+id/txt_bottom_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorGreyBottomNavigation"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <!-- Full Menu Bottom View -->

            <LinearLayout
                android:id="@+id/ll_bottom_fullmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bottom_fullmenu"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_fullmenu_grey" />

                <TextView
                    android:id="@+id/txt_bottom_fullmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center"
                    android:text="@string/fullmenu"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorGreyBottomNavigation"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <!-- Notifications Bottom View -->

            <LinearLayout
                android:id="@+id/ll_bottom_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_bottom_notifications"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_4sdp"
                        app:srcCompat="@drawable/ic_bell_grey" />

                    <TextView
                        android:id="@+id/txtNotiCount"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_circle_noti"
                        android:gravity="center"
                        android:textAppearance="@style/MyCustomTextStyle.Bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_8ssp"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_bottom_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_minus10sdp"
                    android:layout_marginRight="@dimen/_minus10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center"
                    android:text="@string/notifications"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorGreyBottomNavigation"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <!-- Profile Bottom View -->

            <LinearLayout
                android:id="@+id/ll_bottom_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bottom_profile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_profile_grey" />

                <TextView
                    android:id="@+id/txt_bottom_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center"
                    android:text="@string/profile"
                    android:textAppearance="@style/MyCustomTextStyle.Bold"
                    android:textColor="@color/colorGreyBottomNavigation"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>