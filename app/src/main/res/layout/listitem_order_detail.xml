<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_veg_nonveg"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_toRightOf="@+id/img_veg_nonveg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_7sdp"
            android:text=""
            android:layout_toLeftOf="@+id/txt_cost"
            android:textSize="@dimen/_11ssp"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:textColor="@color/colorGreyHeading"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp" />

        <TextView
            android:id="@+id/txt_cost"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:singleLine="true"
            android:maxLines="1"
            android:text=""
            android:textSize="@dimen/_11ssp"
            android:textAppearance="@style/MyCustomTextStyle.Light"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_divider"
        android:background="@color/colorGreyLight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</LinearLayout>